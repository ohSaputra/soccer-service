{
  "include": [
    "app/**/*", 
    "configs/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@middlewares/*": ["app/middlewares/*"],
      "@errors/*": ["app/errors/*"],
      "@services/*": ["app/services/*"],
      "@configs/*": ["configs/*"]
    },
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}